{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "arrowParens": "always",
  "proseWrap": "preserve",
  "singleAttributePerLine": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.html", "*.css", "*.scss", "*.sass", "*.less"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
