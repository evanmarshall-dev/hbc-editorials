{
  "name": "hbc-editorials",
  "version": "1.0.0",
  "description": "A collection of editorial projects by The Hudson's Bay Content Engineering Team.",
  "main": "index.js",
  "repository": "https://github.com/thebaytech/hbc-editorials",
  "author": "Evan Marshall",
  "license": "MIT",
  "scripts": {
    "pretty:check": "prettier --check .",
    "pretty:write": "prettier --write .",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "beast-mode": "yarn pretty:check && yarn lint:fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{css,less,scss,html,json,jsx,js}": [
      "prettier --write ."
    ],
    "*.js": "eslint --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0"
  }
}
